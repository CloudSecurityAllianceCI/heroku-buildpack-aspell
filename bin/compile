#!/bin/bash

set -e

indent() {
  sed -u 's/^/       /'
}

BUILD_DIR=$1
CACHE_DIR="$2/aspell"


mkdir -p $CACHE_DIR
mkdir -p $BUILD_DIR/vendor
ASPELL=https://raw.githubusercontent.com/apannetrat/heroku-buildpack-aspell/main/aspell.tag.gz

echo "-----> Download Aspell package"
curl -s -L $ASPELL -o "$CACHE_DIR/aspell.tar.gz" | indent
tar -xf "${CACHE_DIR}/aspell.tar.gz" -C $BUILD_DIR/vendor | indent


